<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h2><span class="member-name"></span>'s Collector Cache</h2>
    </div>
  </div>
</div>

<br>

<div class="container">

  <div class="row">

    <div class="col-md-6">
      <form class="form-inline my-2 my-lg-0">
        <input class="form-control mr-sm-2" id="cardCollectIn" type="search" placeholder="Card Name"
          aria-label="Search">
        <button class="btn btn-outline-success my-2 my-sm-0" id="cardCollect" type="submit">Search in your
          Collection</button>
      </form>
    </div>

    <div class="col-md-6">
      <form class="form-inline my-2 my-lg-0">
        <input class="form-control mr-sm-2" id="cardSearchIn" type="search" placeholder="Card Name" aria-label="Search">
        <button class="btn btn-outline-success my-2 my-sm-0" id="cardSearch" type="submit">Search to Add</button>
      </form>
    </div>

  </div>

</div>

<!-- The Modal -->
<div id="myModal" class="modal">

  <!-- Modal content -->
  <div class="modal-content">
    <div class="modal-header">
      <span class="close">&times;</span>
      <h2>Search Result(s)</h2>
      <label for="quantity">Quantity</label>
      <input id="quantity" name="quantity" placeholder="1">
      <hr>
      <label for="condition">Condition</label>
      <select name="condition" id="condition">
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
      </select>
      <hr>
    </div>
    <div class="modal-body">

    </div>
    <div class="modal-footer">
      <h3>Select accurate card from selection above!</h3>
      <button type="button" class="btn btn-primary">Add</button>
    </div>
  </div>

</div>

<div>
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">#</th>
        <th scope="col">First</th>
        <th scope="col">Last</th>
        <th scope="col">Handle</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <th scope="row">1</th>
        <td>Mark</td>
        <td>Otto</td>
        <td>@mdo</td>
      </tr>
      <tr>
        <th scope="row">2</th>
        <td>Jacob</td>
        <td>Thornton</td>
        <td>@fat</td>
      </tr>
      <tr>
        <th scope="row">3</th>
        <td>Larry</td>
        <td>the Bird</td>
        <td>@twitter</td>
      </tr>
    </tbody>
  </table>


  <div>
    {{#each cards}}
    {{Card-Database}}
    {{/each}}
  </div>
</div>